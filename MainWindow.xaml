<Window x:Class="PrintLogPdf3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch PDF Generator"
        Height="400"
        Width="520"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>   <!-- 로그인 정보 -->
        <RowDefinition Height="*"/>      <!-- Batch List -->
        <RowDefinition Height="Auto"/>   <!-- Buttons -->
    </Grid.RowDefinitions>
        
        <Border Grid.Row="0"
                Background="#F2F2F2"
                Padding="8"
                Margin="0,0,0,10"
                BorderBrush="#CCCCCC"
                BorderThickness="0,0,0,1">

            <TextBlock x:Name="LoginInfoText"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#333"/>
        </Border>

        <!-- Batch List -->
        <GroupBox Grid.Row="1"
          Header="Batch List"
          FontWeight="Bold">
            <ListBox x:Name="BatchList"
                    DisplayMemberPath="DisplayName"
                    SelectionChanged="BatchList_SelectionChanged"
                    FontSize="14"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button x:Name="GenerateButton"
                    Content="PDF 생성"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    Click="OnGenerateClick"
                    IsEnabled="False"
                    Background="#E0E0E0"
                    Foreground="Black"/>

            <Button Content="닫기"
                    Width="80"
                    Height="40"
                    Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
