<Window x:Class="PrintLogPdf3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch PDF Generator"
        Height="400"
        Width="700"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        StateChanged="Window_StateChanged">

    <Grid Margin="20">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>   <!-- 로그인 정보 -->
        <RowDefinition Height="*"/>      <!-- Batch List -->
        <RowDefinition Height="Auto"/>   <!-- Buttons -->
    </Grid.RowDefinitions>
        
        <Border Grid.Row="0"
                Background="#F2F2F2"
                Padding="8"
                Margin="0,0,0,10"
                BorderBrush="#CCCCCC"
                BorderThickness="0,0,0,1">

            <TextBlock x:Name="LoginInfoText"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="#333"/>
        </Border>

        <!-- Batch List -->
        <Grid Grid.Row="1">

        <!-- ================= Batch 선택 화면 ================= -->
        <GroupBox x:Name="BatchSelectPanel"
                Header="Batch List"
                FontWeight="Bold">
            <ListView x:Name="BatchListView"
          SelectionChanged="BatchListView_SelectionChanged"
          FontSize="14">

        <ListView.View>
                <GridView>

                <!-- Batch 시간 -->
                <GridViewColumn Header="Batch"
                                Width="410"
                                DisplayMemberBinding="{Binding DisplayName}" />

                <!-- 결재 요청 여부 -->
                <GridViewColumn Header="Request"
                                Width="100"
                                DisplayMemberBinding="{Binding RequestStatus}" />

                <!-- 결재 승인 여부 -->
                <GridViewColumn Header="Approved"
                                Width="100"
                                DisplayMemberBinding="{Binding ApproveStatus}" />

                </GridView>
        </ListView.View>

        </ListView>

        </GroupBox>

        <GroupBox x:Name="ChecklistPanel"
                Header="Checklist"
                FontWeight="Bold"
                Visibility="Collapsed">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <CheckBox x:Name="Check1"
                        Content="승인되지 않은 사용자 변경이 있습니까? 변경 사유 기입"
                        FontSize="14"
                        Margin="0,5"
                        Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                <TextBox x:Name="Reason1"
                        Visibility="Collapsed"
                        Margin="20,2,0,5"
                        FontSize="13"
                        FontWeight="Normal"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        Height="50"/>

                <CheckBox x:Name="Check2"
                        Content="알람이 발생했습니까? 알람 발생후 조치 내용 기입"
                        FontSize="14"
                        Margin="0,5"
                        Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                <TextBox x:Name="Reason2"
                        Visibility="Collapsed"
                        Margin="20,2,0,5"
                        FontSize="13"
                        FontWeight="Normal"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        Height="50"/>

                <CheckBox x:Name="Check3"
                        Content="자동운전의 설정값을 변경한 적이 있습니까? 변경 이유 기입"
                        FontSize="14"
                        Margin="0,5"
                        Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                <TextBox x:Name="Reason3"
                        Visibility="Collapsed"
                        Margin="20,2,0,5"
                        FontSize="13"
                        FontWeight="Normal"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        Height="50"/>
            </StackPanel>
            </ScrollViewer>
        </GroupBox>

    </Grid>


        <!-- Buttons -->
        <StackPanel Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,15,0,0">

        <Button x:Name="BackButton"
                Content="뒤로가기"
                Width="100"
                Height="40"
                Margin="0,0,10,0"
                Click="BackButton_Click"
                Visibility="Collapsed"/>

        <Button x:Name="NextButton"
                Content="다음"
                Width="100"
                Height="40"
                Margin="0,0,10,0"
                Click="NextButton_Click"
                IsEnabled="False"/>

        <Button x:Name="ApprovalButton"
                Content="결재요청"
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Click="OnRequestClick"
                Visibility="Collapsed"/>

        <Button x:Name="PreviewButton"
                Content="미리보기"
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Background="#bbeea4"
                Click="OnPreviewClick"
                Visibility="Collapsed"/>

        <Button x:Name="ApproveButton"
                Content="결재승인"
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Click="OnApproveClick"
                Visibility="Collapsed"
                IsEnabled="False"/>

        <Button x:Name="SaveButton"
                Content="저장"
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Click="OnSaveClick"
                Visibility="Collapsed"/>

        <Button Content="닫기"
                Width="80"
                Height="40"
                Click="OnCloseClick"/>
    </StackPanel>

    </Grid>
</Window>
